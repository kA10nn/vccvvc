# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=ares_c2
DB_USER=ares
DB_PASSWORD=${DB_PASSWORD:-KKaaTTeeNN}

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD:-KKaaTTeeNN}

# Application
JWT_SECRET=${JWT_SECRET:-super-secret-jwt-key-change-this-in-production}
ADMIN_USERNAME=admin
ADMIN_PASSWORD=${ADMIN_PASSWORD:-KKaaTTeeNN}
API_KEY=${API_KEY:-ares-api-key-$(openssl rand -hex 16)}

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
ENABLE_TLS=false  # Set to true in production with proper certs
TLS_CERT_PATH=/app/ssl/cert.pem
TLS_KEY_PATH=/app/ssl/key.pem
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE=104857600  # 100MB

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Features
ENABLE_WEBSOCKET=true
ENABLE_FILE_UPLOAD=true
ENABLE_MULTIPLE_OPERATORS=true
ENABLE_ACTIVITY_LOGGING=true
AUTO_CLEANUP_OLD_TASKS=true
TASK_RETENTION_DAYS=30
AGENT_INACTIVE_TIMEOUT=300  # seconds

# Security
ALLOWED_ORIGINS=http://localhost:3000,http://localhost,https://localhost
RATE_LIMIT=100
ENABLE_CORS=true

# Build info
BUILD_TIME=${BUILD_TIME}
GIT_COMMIT=${GIT_COMMIT}
VERSION=1.0.0
